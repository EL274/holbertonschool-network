#!/usr/bin/bash

# Ensure the script is run with superuser privileges
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.bak
echo "Backup of /etc/hosts created at /etc/hosts.bak"

# Update /etc/hosts with the new configurations
sed -i '/127.0.0.2 localhost/d' /etc/hosts
sed -i '/8.8.8.8 facebook.com/d' /etc/hosts

# Add the new entries
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Host configuration updated successfully."

# Display the new /etc/hosts for verification
echo "Updated /etc/hosts:"
cat /etc/hosts
